<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_form1"
    tools:context=".HitungActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo2" />

    <EditText
        android:id="@+id/editTextMasaKerja"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="Masa Kerja"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextGaji"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextMasaKerja"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-light"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="Gaji Anda"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/hitung"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:onClick="onClick"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/roundedbutton"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/white"
        android:text="Hitung"
        android:textStyle="bold"/>

</RelativeLayout>